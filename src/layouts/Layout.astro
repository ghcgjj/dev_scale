---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
		<meta name="description" content="DEV.SCALE | Agencia de élite especializada en infraestructuras digitales." />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Syncopate:wght@400;700&family=Inter:wght@300;400;900&display=swap" rel="stylesheet">
	</head>
	<body class="bg-[#050000] text-white overflow-x-hidden">
		
		<div class="fixed inset-0 z-[-1] overflow-hidden">
			<div class="absolute top-[-10%] left-[-10%] w-[70%] h-[70%] bg-red-900/20 rounded-full blur-[120px] animate-fluid-1"></div>
			<div class="absolute bottom-[-10%] right-[-10%] w-[60%] h-[60%] bg-red-600/10 rounded-full blur-[120px] animate-fluid-2"></div>
		</div>

		<div class="noise"></div>

		<slot />

		<style is:global>
			:root {
				--red: #ff0000;
				--gold: #d4af37;
				--black: #050000;
			}

			body {
				font-family: 'Inter', sans-serif;
				margin: 0;
				padding: 0;
				width: 100%;
			}

			h1, h2 {
				font-family: 'Syncopate', sans-serif;
				text-transform: uppercase;
			}

			.noise {
				position: fixed;
				top: 0; left: 0; width: 100%; height: 100%;
				background: url('https://grainy-gradients.vercel.app/noise.svg');
				opacity: 0.1;
				pointer-events: none;
				z-index: 9999;
			}

			/* --- PARCHE PARA MÓVILES --- */
			@media (max-width: 768px) {
				html, body {
					overflow-x: hidden;
				}
				h1 {
					font-size: 2.5rem !important; /* Evita que el título se salga */
					letter-spacing: -1px !important;
				}
				section {
					padding: 2rem 1rem !important; /* Da aire en los lados */
				}
				.glass {
					padding: 1.5rem !important;
				}
			}

			@keyframes fluid-1 {
				0% { transform: translate(0, 0) scale(1); }
				50% { transform: translate(5%, 5%) scale(1.1); }
				100% { transform: translate(0, 0) scale(1); }
			}
			.animate-fluid-1 { animation: fluid-1 15s infinite alternate ease-in-out; }
		</style>
	</body>
</html>